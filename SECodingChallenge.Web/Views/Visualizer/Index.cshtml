@{
    ViewBag.Title = "Visualize Sale's Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 bridge-lightpurple brdg-subbar">
            <h2>Visualize Sale's Data</h2>
        </div>
    </div>
</div>
@using (Html.BeginForm("ViewSalesData", "Visualizer", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="container brgd-container">
        <p class="brdg-requiredfields">
            <span class="bridge-pink-text">*</span> Required fields
        </p>
        <div class="row">
            <div class="col-lg-12 brdg-addnew-resident-form-int brdg-changepss-container">
                <div class="brdg-changepss">                    
                    <div class="bridge-form-medium brdg-addnew-resident-form-int bridge-form-textfield1 bridge-select-greylabel">
                        <label for="upload">Sales Data File: <span class="bridge-pink-text bridge-fonts-bold">*</span></label>
                        <input type="file" id="upload" name="upload">
                    </div>

                    <div class="bridge-submitbutton brdg-changepss-btn">
                        <input value="Upload File" type="submit" id="submitButton" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}